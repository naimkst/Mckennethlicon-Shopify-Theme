<div class="text-page-area section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-xl-4">
                <div class="text-page-left">
                    <h2 class="title-two">{{ section.settings.faq_title }}</h2>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-xl-6">
                <div class="accordion primary-accordion" id="PrimaryAccordion">
                    {% for block in section.blocks %}
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne{{ forloop.index }}">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne{{ forloop.index }}" aria-expanded="true" aria-controls="collapseOne{{ forloop.index }}">
                                    {{ block.settings.faq_title }}
                                </button>
                            </h2>
                            <div id="collapseOne{{ forloop.index }}" class="accordion-collapse collapse {% if forloop.index == 1 %} show {% endif %}" aria-labelledby="headingOne{{ forloop.index }}"
                                data-bs-parent="#PrimaryAccordion">
                                <div class="accordion-body">
                                    {{ block.settings.faq_answer }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="feature-area">
                    <h3 class="title-three">{{ section.settings.content_title }}</h3>
