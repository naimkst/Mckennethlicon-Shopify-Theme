
<body>

<!-- header area star here  -->
<header class="header-area header-transparent">
    <div class="header-top">
        <p>{{ section.settings.announce_bar }}</p>
        <button class="close-btn"><i class="fas fa-times"></i></button>
    </div>
    <div class="container">
        <div class="header-wrap">
            <div class="header-left">
                <a class="navbar-brand" href="/"><img src="{{ section.settings.logo | img_url: '' }}" alt="logo" /></a>
            </div>
            <nav class="main-menu-area">
                <ul>
                    {% for link in linklists[section.settings.main_menu].links %}
                        {% if link.links == blank %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
            <div class="header-right">
                <ul>
                    <li class="search-btn">
                        <a href="#"><img class="icon" src="{{ 'search.svg' | asset_url }}" alt="search" /></a>
                        <div class="search-form-area">
                            <div class="search-form">
                                <form action="#">
                                    <input type="search" id="search-box" name="q" placeholder="Search here" autocomplete="off" />
                                </form> 
                            </div>
                            <div class="search-item-list">
                                
                                <!-- <a href="#" class="load-more-btn">load more</a> -->
                            </div>
                        </div>
                    </li>
                    <!-- <li><a href="#"><img class="icon" src="{{ 'account.svg' | asset_url }}" alt="account" /></a></li> -->
                    <li><a href="#" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCart" aria-controls="offcanvasCart" class="cart-btn"><img class="icon" src="{{ 'bag.svg' | asset_url }}" alt="bag" />
                            <span class="cart-items-count">{{ cart.item_count }}</span></a></li>
                </ul>
                <button class="menu-bar d-block d-lg-none" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasMobileMenu" aria-controls="offcanvasMobileMenu"><i
                        class="fas fa-bars"></i></button>
            </div>
        </div>
    </div>
</header>
<!-- header area end here  -->
<div class="offcanvas offcanvas-end mobile-menu-area" tabindex="-1" id="offcanvasMobileMenu">
    <div class="offcanvas-header">
        <a class="navbar-brand" href="/"><img src="{{ section.settings.logo | img_url: '' }}" alt="logo" /></a>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"><i
                class="fas fa-times"></i></button>
    </div>
    <div class="offcanvas-body">
        <nav class="mobile-menu">
            <ul>
                {% for link in linklists[section.settings.main_menu].links %}
                    {% if link.links == blank %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>

{% schema %}
{
    "name": "Header",
    "settings":[
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "image_picker",
            "id": "favicon",
            "label": "Favicon"
        },
        {
            "type": "text",
            "id": "announce_bar",
            "label": "Announce Bar",
            "default": "Free In-Store Pick Up + Free Shipping in Canada on Orders Over $80"
        },
        {
            "type": "link_list",
            "id": "main_menu",
            "label": "Main menu"
        }
    ],
    "presets": [
      {
        "name": "Header"
      }
    ]
}
{% endschema %}